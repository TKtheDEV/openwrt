/dts-v1/;

#include "rtl931x.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	compatible = "hasivo,s1300wp-8xgt-4s-plus", "realtek,rtl9313";
	model = "Hasivo S1300WP-8XGT-4S-plus";

	memory@0 {
		device_type = "memory";
		reg = <0x00000000 0x10000000>;  /* 256 MiB for testing */
	};

	chosen {
		bootargs = "console=ttyS0,38400 earlycon";
		stdout-path = "serial0:38400n8";
	};

	aliases {
		serial0 = &uart0;
	};

	mdio0: mdio-bus {
		compatible = "realtek,rtl83xx-mdio";
		#address-cells = <1>;
		#size-cells = <0>;

		/* External PHYs (RTL8264) */
		phy0: ethernet-phy@0 {
			reg = <0>;
		};
		phy1: ethernet-phy@1 {
			reg = <1>;
		};
		phy2: ethernet-phy@2 {
			reg = <2>;
		};
		phy3: ethernet-phy@3 {
			reg = <3>;
		};
		phy4: ethernet-phy@4 {
			reg = <4>;
		};
		phy5: ethernet-phy@5 {
			reg = <5>;
		};
		phy6: ethernet-phy@6 {
			reg = <6>;
		};
		phy7: ethernet-phy@7 {
			reg = <7>;
		};
	};

	leds: leds {
		compatible = "gpio-leds";

		// Placeholder LED (optional)
		sys {
			label = "green:sys";
			gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};

	gpio-restart {
		compatible = "gpio-restart";
		gpios = <&gpio0 7 GPIO_ACTIVE_LOW>; /* front-panel reset */
	};
};

/* ---------- SPI NOR Flash ------------------------------------------ */
&spi0 {
	status = "okay";

	flash@0 {
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <50000000>;

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells   = <1>;

			loader: partition@0 {
				label  = "LOADER";
				reg    = <0x000000 0x0e0000>;
				read-only;
			};
			env@e0000 {
				label  = "BDINFO";
				reg    = <0x0e0000 0x010000>;
			};
			sysinfo@f0000 {
				label  = "SYSINFO";
				reg    = <0x0f0000 0x010000>;
			};
			config@100000 {
				label  = "CFG";
				reg    = <0x100000 0x100000>;
			};
			log@200000 {
				label  = "LOG";
				reg    = <0x200000 0x100000>;
			};
			runtime@300000 {
				label = "RUNTIME";
				reg   = <0x300000 0x700000>;
			};
			runtime2@a00000 {
				label = "RUNTIME2";
				reg   = <0xa00000 0x1600000>;  // up to 0x2000000 (32MB)
			};
		};
	};
};

/* ---------- Ethernet Switch + Ports -------------------------------- */
&switch0 {
	status = "okay";

	ports {
		cpu_port@48 {
			reg = <48>;
			ethernet = <&ethernet0>;
			phy-mode = "internal";
		};

		port@0 {
			reg = <0>;
			label = "lan1";
			phy-handle = <&phy0>;
			phy-mode = "sgmii";
		};

		port@1 {
			reg = <1>;
			label = "lan2";
			phy-handle = <&phy1>;
			phy-mode = "sgmii";
		};

		port@2 {
			reg = <2>;
			label = "lan3";
			phy-handle = <&phy2>;
			phy-mode = "sgmii";
		};

		port@3 {
			reg = <3>;
			label = "lan4";
			phy-handle = <&phy3>;
			phy-mode = "sgmii";
		};

		port@4 {
			reg = <4>;
			label = "lan5";
			phy-handle = <&phy4>;
			phy-mode = "sgmii";
		};

		port@5 {
			reg = <5>;
			label = "lan6";
			phy-handle = <&phy5>;
			phy-mode = "sgmii";
		};

		port@6 {
			reg = <6>;
			label = "lan7";
			phy-handle = <&phy6>;
			phy-mode = "sgmii";
		};

		port@7 {
			reg = <7>;
			label = "lan8";
			phy-handle = <&phy7>;
			phy-mode = "sgmii";
		};
	};
};

/* ---------- Ethernet Controller ------------------------------------ */
&ethernet0 {
	status = "okay";
	mdio = <&mdio0>;
	phy-mode = "internal";

	fixed-link {
		speed = <1000>;
		full-duplex;
	};
};

/* ---------- UART --------------------------------------------------- */
&uart0 {
	status = "okay";
};

&uart1 {
	status = "disabled";
};
